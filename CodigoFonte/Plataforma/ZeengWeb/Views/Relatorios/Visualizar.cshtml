                    <i class="fa fa-twitter-square fa-3x" aria-hidden="true"></i>
                    <span class="titulo-rede-social">Tabela comparativa das marcas em relação ao Twitter</span>
                    <div style="float:right;"><a class="btn btn-default" onclick="relatorios.GerarCSV(@ViewBag.idRelatorio ,this, 'twitter');">Exportar CSV</a></div>
                </div>
            </div>
            <div class="col-lg-12 tabela-rede-social">

                <table class="footable table table-stripped toggle-arrow-tiny footable-loaded tablet breakpoint">
                    <thead>
                        <tr class="titulos-metricas-twitter">
                            <th class="footable-visible footable-sortable">Empresa<span class="footable-sort-indicator"></span></th>
                        </tr>
                    </thead>
                    <tbody class="tabela-metricas-twitter"></tbody>
                    <tfoot class="tabela-media-geral-twitter">

                    </tfoot>
                </table>

            </div>

        </div>
    </div>
    <div class="ibox-instagram ibox-content m-b-sm border-bottom box-relatorio-rs"  style="display:none">
        <div class="row">

            <div class="col-lg-12">
