    <div class="row" style="margin-top:50px;">
        <div class="col-lg-8"></div>
        <div class="col-lg-4">
            <button class="btn btn-rlt" onclick="sair()"><i class="fa fa-arrow-right" aria-hidden="true"></i> Sair</button>
            <button class="btn btn-rlt" onclick="editar()"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Editar</button>
            <button class="btn btn-rlt" id="ImprimirRelatorio"><i class="fa fa-file-pdf-o" aria-hidden="true"></i> Imprimir</button>
        </div>
    </div>

    <div id="dados-facebook" style="display:none;"></div>
    <div id="dados-twitter" style="display:none;"></div>
    <div id="dados-instagram" style="display:none;"></div>
    <div id="dados-youtube" style="display:none;"></div>

</div>

@section Styles {

}

@section Scripts {

    <script src="~/Scripts/utils.js"></script>
    <script src="~/Scripts/Relatorios/relatorios.js"></script>
    
    <script type="text/javascript">

        var relatorios = new Relatorios();

        relatorios.metricasFacebook(@ViewBag.idRelatorio);
        relatorios.metricasTwitter(@ViewBag.idRelatorio);
        relatorios.metricasInstagram(@ViewBag.idRelatorio);
        relatorios.metricasYoutube(@ViewBag.idRelatorio);
        relatorios.MetricasPresencaNoticia(@ViewBag.idRelatorio);

        relatorios.CarregaPeriodoRelatorio(@ViewBag.idRelatorio);

        $(document).ready(function () {

            setTimeout(function () {
                relatorios.GerarDadosCSV();
            }, 1300);

        });

        $("#ImprimirRelatorio").click(function () {

            window.print();

        });

        function sair() {
            window.location = "/Relatorios";
        }

        function editar() {
            window.location = "/Relatorios/Editar?idRelatorio="+@ViewBag.idRelatorio;
        }

    </script>

}
