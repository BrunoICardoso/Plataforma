<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>Visualização de Relatório</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/Relatorios">Relatórios</a>
            </li>
            <li class="active">
                <strong>Visualizar</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row" style="padding-bottom: 10px;">
        <div class="col-lg-5"><b>Relatório:</b> <span id="nomeRelatorio"></span></div>
        <div class="col-lg-3"></div>
        <div class="col-lg-4" style="text-align:right;" ><b>Período de comparação:</b> <span id="periodoCompara"></span></div>
    </div>

    <div class="ibox-facebook ibox-content m-b-sm border-bottom box-relatorio-rs" style="display:none">
        <div class="row">
            <div class="col-lg-12">
                <div class="lblRedeSocial">
                    <i class="fa fa-facebook-official fa-3x" aria-hidden="true"></i>
                    <span class="titulo-rede-social">Tabela comparativa das marcas em relação ao Facebook</span>
                    <div style="float:right;"><a class="btn btn-default" onclick="relatorios.GerarCSV(@ViewBag.idRelatorio ,this, 'facebook');">Exportar CSV</a></div>
                </div>
            </div>
            <div class="col-lg-12 tabela-rede-social">

                <table class="footable table table-stripped toggle-arrow-tiny footable-loaded tablet breakpoint">
                    <thead>
                        <tr class="titulos-metricas-facebook">
                            <th class="footable-visible footable-sortable">Empresa<span class="footable-sort-indicator"></span></th>
                        </tr>
                    </thead>
                    <tbody class="tabela-metricas-facebook"></tbody>
                    <tfoot class="tabela-media-geral-facebook">

                    </tfoot>
                </table>

                @*<div class="paginacao">
                    </div>*@

            </div>

        </div>
    </div>
    <div class="ibox-twitter ibox-content m-b-sm border-bottom box-relatorio-rs" style="display:none">
        <div class="row">

            <div class="col-lg-12">
