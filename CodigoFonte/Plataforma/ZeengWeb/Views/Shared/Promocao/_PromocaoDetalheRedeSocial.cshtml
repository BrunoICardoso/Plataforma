<div class="ibox-content m-b-sm border-bottom">
    <div class="row">
        <div class="col-md-12">
            <label>Pesquisar</label>
        </div>

        <div class="col-md-9">
            <input type="text" id="txtPesquisa" name="txtPesquisa" value="" placeholder="Palavra ou texto" class="form-control input-mini" />
        </div>

        <div class="col-md-3">
            <button type="button" class="btn btn-primary">Pesquisar</button>
        </div>
    </div>

</div>

<br />

<div class="row" style="margin-bottom: 10px;">
    <div class="col-md-4"></div>

