        <button type="button" class="btn btn-primary btnPartialRede active" data-rede="Facebook"><i class="fa fa-facebook"></i>&nbsp;|&nbsp;Facebook</button>
    </div>
    <div class="col-md-2">
        <button type="button" class="btn btn-primary btnPartialRede" data-rede="Twitter"><i class="fa fa-twitter"></i>&nbsp;|&nbsp;Twitter</button>
    </div>
    <div class="col-md-2">
        <button type="button" class="btn btn-primary btnPartialRede" data-rede="Instagram"><i class="fa fa-instagram"></i>&nbsp;|&nbsp;Instagram</button>
    </div>
    <div class="col-md-2">
        <button type="button" class="btn btn-primary btnPartialRede" data-rede="Youtube"><i class="fa fa-youtube"></i>&nbsp;|&nbsp;Youtube</button>
    </div>
</div>

<br />

<div id="areaFacebook">
    @Html.Partial("Promocao/_PromocaoDetalheRedeSocial_AbaFacebook")
